{
  "manifest_version": 3,
  "name": "volume manager",
  "version": "1.0.2",
  "description": "control any tab's volume separately",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "volume-manager@local",
        "data_collection_permissions": {
          "required": ["none"]
        }
      }
  },
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.ts"
    ]
  },
  "icons": {
    "512": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.ts"
      ],
      "css": []
    }
  ]
}